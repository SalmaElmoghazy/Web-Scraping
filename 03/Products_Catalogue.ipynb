   "source": [
    "from selenium import webdriver\n",
    "import time\n",
    "import pandas as pd"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "dda29ef3",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Set up the path to the chrome driver\n",
    "PATH = \"PATH_TO_CHROME_DRIVER_EXCUTABLE_FILE"\n",
    "driver = webdriver.Chrome(PATH)\n",
    "\n",
    "all_details = []\n",
    "\n",
    "try:\n",
    "    # Get current page\n",
    "    driver.get(\"https://www.techsoup.ca/product-catalog\")\n",
    "    time.sleep(1)\n",
    "\n",
    "    # Load the whole page\n",
    "    while True:\n",
    "        try:\n",
    "            loadMoreButton = driver.find_element_by_id(\"ts_stock_show_more\")\n",
    "            time.sleep(2)\n",
    "            loadMoreButton.click()\n",
    "            time.sleep(3)\n",
    "        \n",
    "        except Exception as e:\n",
    "            print(e)\n",
    "            break\n",
    "\n",
    "\n",
    "    # Find all products in the page\n",
    "    products = driver.find_elements_by_class_name('ts-stock-product')\n",
    "\n",
    "    # Generate a list of links of all the products\n",
    "    links = []\n",
    "\n",
    "    print(\"\\nGetting data ...\\n\")\n",
    "    for i in range(len(products)):\n",
    "        item = products[i]\n",
    "\n",
    "        # Get the href property\n",
    "        link = item.find_element_by_tag_name(\"a\").get_property(\"href\")\n",
    "\n",
    "        # Append the link to list links\n",
    "        links.append(link)\n",
    "\n",
    "\n",
    "    # Loop through each link to access the page of each game\n",
    "    for i, link in enumerate(links):\n",
    "        print('Get product {} data ...'.format(i+1))\n",
    "        # get one game url\n",
    "        driver.get(link)\n",
    "        time.sleep(1)\n",
    "\n",
    "\n",
    "        # page link\n",
    "        product_page = link\n",
    "\n",
    "        # Product name\n",
    "        product_title = driver.find_element_by_tag_name('h1').text\n",
    "\n",
    "        # Product description\n",
    "        try:\n",
    "            product_description = driver.find_element_by_id('tabs-0').text\n",
    "        \n",
    "        except:\n",
    "            product_description = ''\n",
    "\n",
    "        # Details list\n",
    "        details = driver.find_elements_by_class_name('product-details__field')\n",
    "\n",
    "        details_dict = {'ID': '', 'Donor': '', 'Category': '', 'Language': '', 'AdminFee': '', 'Media': '', 'Platform': ''}\n",
    "\n",
    "        for item in details:\n",
    "\n",
    "            try:\n",
    "                label = item.find_element_by_class_name('field-label')\n",
    "                value = item.find_element_by_class_name('field-items')\n",
    "            \n",
    "            except:\n",
    "                continue\n",
    "\n",
    "            if label.text == 'Donor Partner: ':\n",
    "                details_dict['Donor'] = value.text\n",
    "\n",
    "            elif label.text == 'Software category: ':\n",
    "                details_dict['Category'] = value.text\n",
    "\n",
    "            elif label.text == 'Media: ':\n",
    "                details_dict['Media'] = value.text\n",
    "\n",
    "            elif label.text == 'Platform: ':\n",
    "                details_dict['Platform'] = value.text\n",
    "\n",
    "            elif label.text == 'Language: ':\n",
    "                details_dict['Language'] = value.text\n",
    "\n",
    "            elif label.text == 'Product ID: ':\n",
    "                details_dict['ID'] = value.text\n",
    "\n",
    "            elif label.text == 'Admin Fee: ':\n",
    "                try:\n",
    "                    details_dict['AdminFee'] = float(value.text[1:].replace(',', ''))\n",
    "                \n",
    "                except:\n",
    "                    details_dict['AdminFee'] = ''\n",
    "\n",
    "\n",
    "\n",
    "\n",
    "        # Dictionary with details we need\n",
    "        record = {\n",
    "            \"Product ID\": details_dict['ID'],\n",
    "            \"Product Title\": product_title,\n",
    "            \"Product Description\": product_description,\n",
    "            \"Donor Partner\": details_dict['Donor'],\n",
    "            \"Language\": details_dict['Language'],\n",
    "            \"Category\": details_dict['Category'],\n",
    "            \"Media\": details_dict['Media'],\n",
    "            \"Platform\": details_dict['Platform'],\n",
    "            \"Admin Fee ($)\": details_dict['AdminFee'],\n",
    "            \"Product URL\": product_page\n",
    "        }\n",
    "        \n",
    "        # Append record to all details\n",
    "        all_details.append(record)\n",
    "\n",
    "\n",
    "except Exception as e:\n",
    "    # Close the browser if we run to an error\n",
    "    print(e)\n",
    "    driver.close()\n",
    "\n",
    "\n",
    "# Close the browser\n",
    "time.sleep(3)\n",
    "driver.close()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "1caa7e87",
   "metadata": {},
   "outputs": [],
   "source": [
    "df = pd.DataFrame(all_details)\n",
    "df[\"Admin Fee ($)\"] = df[\"Admin Fee ($)\"].apply(pd.to_numeric)\n",
    "df.info()"
   ]
  },
